

<%= render @poll %>
<%= form_with model: @poll, local: true do |form| %>
  <% @poll.questions.each do |question| %>
    <p>
      <%= form.radio_button :question_id, question.id %>
      <%= question.question %>
    </p>
  <% end %>
  <%= form.submit "Cast Vote" %>
<% end %>

<div>
  <%= link_to "Edit this poll", edit_poll_path(@poll) %> |
  <%= link_to "Back to polls", polls_path %>

  <%= button_to "Destroy this poll", @poll, method: :delete %>
</div>
